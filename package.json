{
  "name": "totk-savegame-editor",
  "version": "0.1.0",
  "description": "Electron wrapper for The Legend of Zelda: Tears of the Kingdom savegame editor.",
  "private": true,
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "pkg-mac-arm": "electron-packager . totk-savegame-editor --platform=darwin --arch=arm64 --out=dist --overwrite",
    "pkg-win": "electron-packager . totk-savegame-editor --platform=win32 --arch=x64 --out=dist --overwrite"
  },
  "devDependencies": {
    "electron": "30.5.1",
    "electron-packager": "^17.1.2"
  }
}
